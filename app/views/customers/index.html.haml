.row
  .col-md-6
    %h4.heading Listing customers
  .col-md-6
    = link_to 'New Customer', new_customer_path, class:'pull-right btn btn-primary'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th First name
        %th Last name
        %th Email address
        %th Phone number
        %th Address
        %th City
        %th State
        %th Zip
        %th
        %th
        %th

    %tbody
      - @customers.each do |customer|
        %tr
          %td= customer.first_name
          %td= customer.last_name
          %td= customer.email_address
          %td= customer.phone_number
          %td= customer.address
          %td= customer.city
          %td= customer.state
          %td= customer.zip
          %td= link_to 'Show', customer
          %td= link_to 'Edit', edit_customer_path(customer)
          %td= link_to 'Destroy', customer, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
.clearfix
  = will_paginate @customers, renderer: BootstrapPagination::Rails


