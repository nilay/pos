.row
  .col-md-6
    %h4.heading Listing Category
  .col-md-6
    = link_to 'New Category', new_category_path, class:'pull-right btn btn-primary'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Description
        %th
        %th
        %th

    %tbody
      - @categories.each do |category|
        %tr
          %td= category.name
          %td= category.description
          %td= link_to 'Show', category
          %td= link_to 'Edit', edit_category_path(category)
          %td= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }
.clearfix
  = will_paginate @categories, renderer: BootstrapPagination::Rails
