.row
  .col-md-6
    = form_for @dish do |f|
      - if @dish.errors.any?
        #error_explanation
          %h5= "#{pluralize(@dish.errors.count, "error")} prohibited this dish from being saved:"
          %ul
            - @dish.errors.full_messages.each do |msg|
              %li= msg

      .form-group
        = f.label :category
        = collection_select :dish, :category_id, Category.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"}
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :description
        = f.text_area :description, class: 'form-control'
      .form-group
        = f.label :price
        = f.text_field :price, class: 'form-control'
      .form-group
        = f.label :published
        = f.check_box :published
      .form-group
        = f.submit 'Save', class: 'btn btn-primary'
